<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationButton">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/memoria_backround">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView9"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="#CFD5F0"
            app:cardCornerRadius="700dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/memorialogo" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/adamina"
            android:text="Registriere dich in wenigen Schritten und deine Gesundheit wird es dir danken."
            android:textAlignment="center"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView9" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView10"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#A8E6B77E"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/name_edit_button"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Dein Name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/password_edit_button"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:hint="Passwort erstellen"
                    android:inputType="textPassword"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name_edit_button" />

                <EditText
                    android:id="@+id/password_repitition_edit_button"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:hint="Passwort bestÃ¤tigen"
                    android:inputType="textPassword"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/password_edit_button" />

                <EditText
                    android:id="@+id/email_edit_button"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:hint="Email Adresse eingeben"
                    android:inputType="textEmailAddress"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.48"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/password_repitition_edit_button" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/login_button"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="#D2B69F"
            android:text="Anmelden"
            android:textColor="#686666"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView10"
            app:strokeColor="#8F9DE1"
            app:strokeWidth="3dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>